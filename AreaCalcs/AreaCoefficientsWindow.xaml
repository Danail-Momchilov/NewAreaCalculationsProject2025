<Window x:Class="AreaCalculations.AreaCoefficientsWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AreaCalculations"
             mc:Ignorable="d"
             SizeToContent="WidthAndHeight"
             Title="Area Coefficients"
             ResizeMode="NoResize"
             WindowStyle="SingleBorderWindow"
             Background="White"
             Foreground="#EEE809">
    <StackPanel Margin="10">
        <Label Content="Моля, въведете стойности за A Coefficient Multiplied:" Height="30" Width="320" HorizontalAlignment="Left" Margin="0,0,0,5" Background="#EEE809" HorizontalContentAlignment="Center"/>

        <StackPanel Orientation="Horizontal" Margin="0,5,0,0" Height="30">
            <Label Content="A Coefficient Multiplied" Height="30" Width="250"/>
            <TextBox x:Name="ACM" HorizontalAlignment="Right" Height="20" Margin="5,5,0,0" TextWrapping="Wrap" Text="1.0" VerticalAlignment="Top" Width="40"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,0" Height="30">
            <Label Content="A Coefficient Multiplied (Гараж / Паркинг)" Height="30" Width="250"/>
            <TextBox x:Name="ACMGP" HorizontalAlignment="Right" Height="20" Margin="5,5,0,0" TextWrapping="Wrap" Text="0.8" VerticalAlignment="Top" Width="40"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,0" Height="30">
            <Label Content="A Coefficient Multiplied (Склад / Мазе)" Height="30" Width="250"/>
            <TextBox x:Name="ACMSM" HorizontalAlignment="Right" Height="20" Margin="5,5,0,0" TextWrapping="Wrap" Text="0.3" VerticalAlignment="Top" Width="40"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5,0,0" Height="30">
            <Label Content="Override existing values" Height="30" Width="250"/>
            <CheckBox x:Name="overrideCoefficients" Width="15" Height="15" Margin="5,0,0,0" IsChecked="False" VerticalAlignment="Center"/>
        </StackPanel>

        <Button Content="ВЪВЕДИ" Height="25" Margin="0,10,0,0" Width="320" Click="SetAreaCoefficients" Background="#EEE809"/>
    </StackPanel>
</Window>
