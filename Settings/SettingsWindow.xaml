<Window x:Class="AreaCalculations.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:AreaCalculations"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Title="Settings"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Background="White"
        WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Label Content="Изберете Area Scheme и Phase:" Height="30" Width="300" HorizontalAlignment="Left" Background="#EEE809" HorizontalContentAlignment="Center"/>

        <StackPanel Orientation="Horizontal" Margin="10,10,10,5">
            <Label Content="Area Scheme:" Width="100"/>
            <ComboBox x:Name="AreaSchemeComboBox" Width="180" Height="24"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="10,5,10,10">
            <Label Content="Phase:" Width="100"/>
            <ComboBox x:Name="PhaseComboBox" Width="180" Height="24"/>
        </StackPanel>

        <Button Content="ЗАПАЗИ" Height="25" Margin="10,5,10,15" Width="280" Click="SaveSettings_Click" Background="#EEE809"/>
    </StackPanel>
</Window>
